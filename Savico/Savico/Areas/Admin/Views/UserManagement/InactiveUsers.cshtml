@using Savico.Core.Models.ViewModels.Admin.UserManagement
@model IEnumerable<AllUsersViewModel>

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Inactive Users";
}

<div class="container-fluid px-4 mt-4">
	<h1 class="mb-4 text-center">Inactive Users</h1>

	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead class="thead-light">
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Role</th>
							<th>Status</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var user in Model)
						{
							<tr>
								<td>@user.Id</td>
								<td>@user.Email</td>
								<td>
									@foreach (var role in user.Roles)
									{
										<span class="badge badge-info text-dark">@role</span>
									}
								</td>
								<td>
									@if (user.Status == "Deleted")
									{
										<span class="badge badge-danger text-dark">@user.Status</span>
									}
									else if (user.Status == "Banned")
									{
										<span class="badge badge-warning text-dark">@user.Status</span>
									}
									else
									{
										<span class="badge badge-success text-dark">@user.Status</span>
									}
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="text-left mt-4">
		<a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-sm">
			<i class="fas fa-arrow-left"></i> Back to Dashboard
		</a>
	</div>
</div>
