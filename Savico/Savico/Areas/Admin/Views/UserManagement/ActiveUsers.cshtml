@using Savico.Core.Models.ViewModels.Admin.UserManagement
@model IEnumerable<AllUsersViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Active Users";
}

<div class="container-fluid px-4 mt-4">
    <h1 class="mb-4 text-center">Active Users</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List of Active Users</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Id</th> 
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td> 
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge badge-info text-dark">@role</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-left mt-4">
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
