@using Savico.Models.ViewModels.Budget
@model BudgetViewModel

<h2>Budget Details</h2>

<div>
    <h4>Budget</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>