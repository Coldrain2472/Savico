@using Savico.Core.Models.ViewModels.Expense
@model ExpenseViewModel

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-trash-alt"></i> Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="lead text-danger"><i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this expense?</p>
            <div class="mb-3">
                <strong>Date:</strong> @Model.Date.ToString("dd.MM.yyyy")<br />
                <strong>Amount:</strong> @Model.Amount @Model.Currency<br />
                <strong>Description:</strong> @Model.Description<br />
            </div>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
