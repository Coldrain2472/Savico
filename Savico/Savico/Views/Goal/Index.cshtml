@using Savico.Core.Models.ViewModels.Goal
@model IEnumerable<GoalViewModel>

@{
    ViewData["Title"] = "Goals";
}

<div class="container mt-5">
    <h1>Your Goals</h1>

    <div class="mb-3">
        <a href="@Url.Action("Create", "Goal")" class="btn btn-success btn-lg shadow-sm rounded-pill">
            <i class="fas fa-plus-circle"></i> Create Goal
        </a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Target Amount</th>
                <th>Current Amount</th>
                <th>Target Date</th>
                <th>Monthly Savings Needed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var goal in Model)
            {
                <tr>
                    <td>@goal.TargetAmount @goal.Currency</td>
                    <td>@goal.CurrentAmount @goal.Currency</td>
                    <td>@goal.TargetDate.ToString("dd.MM.yyyy")</td>
                    <td>@Html.ActionLink("Calculate Monthly Savings", "CalculateMonthlySavings", new { goalId = goal.Id })</td>
                    <td>
                        <a href="@Url.Action("Edit", "Goal", new { id = goal.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Goal", new { id = goal.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>