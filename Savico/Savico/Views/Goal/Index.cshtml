@using Savico.Core.Models.ViewModels.Goal
@model IEnumerable<GoalViewModel>

@{
    ViewData["Title"] = "Goals";
}

<div class="container mt-5">
    <h1>Your Goals</h1>

    

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Target Amount</th>
                <th>Current Amount</th>
                <th>Target Date</th>
               @*  <th>Monthly Savings Needed</th> *@
                <th>Monthly Goal Contribution</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var goal in Model)
            {
                <tr>
                    <td>@goal.TargetAmount @goal.Currency</td>
                    <td>@goal.CurrentAmount @goal.Currency</td>
                    <td>@goal.TargetDate.ToString("dd.MM.yyyy")</td>
                   @*  <td>@goal.MonthlyContribution @goal.Currency</td> *@
                    <td>@goal.MonthlyGoalContribution @goal.Currency</td>
                    @* <th>Monthly Goal Contribution</th> *@
                    <td>
                         <a asp-action="Edit" asp-route-id="@goal.Id" class="btn btn-warning">Edit</a>
					<a asp-action="Details" asp-route-id="@goal.Id" class="btn btn-info">Details</a>
					<a asp-action="Delete" asp-route-id="@goal.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <a href="@Url.Action("Create", "Goal")" class="btn btn-success btn-lg shadow-sm rounded-pill">
            <i class="fas fa-plus-circle"></i> Create Goal
        </a>
    </div>
</div>