@using Savico.Core.Models.ViewModels.Goal
@model GoalViewModel

<div class="container mt-5">
    <h1>Delete Goal</h1>
    <p>Are you sure you want to delete the goal to reach <strong>@Model.TargetAmount</strong> by <strong>@Model.TargetDate.ToString("dd.MM.yyyy")</strong>?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index", "Goal")" class="btn btn-secondary">Cancel</a>
    </form>
</div>