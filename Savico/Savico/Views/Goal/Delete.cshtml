@using Savico.Core.Models.ViewModels.Goal
@model GoalViewModel

@{
    ViewData["Title"] = "Delete Goal";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 mb-4 bg-light">
        <h2 class="text-danger text-center mb-4"><i class="fas fa-trash-alt"></i> Delete Goal</h2>

        <h4 class="text-center mb-4">Are you sure you want to delete this goal?</h4>

        < <div class="card-body">
            <ul class="list-unstyled">
                <li class="mb-3"><strong>Target Date:</strong> @Model.TargetDate.ToString("dd.MM.yyyy")</li>
                <li class="mb-3"><strong>Target Amount:</strong> @Model.TargetAmount @Model.Currency</li>
                <li class="mb-3"><strong>Current Amount:</strong> @Model.CurrentAmount @Model.Currency</li>
                <li class="mb-3"><strong>Description:</strong> @Model.Description</li>
            </ul>
        </div>

        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-lg mr-2">
                    <i class="fas fa-check-circle"></i> Yes, Delete
                </button>
                <a href="@Url.Action("Index", "Goal")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
