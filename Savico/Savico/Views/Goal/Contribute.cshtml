@using Savico.Core.Models.ViewModels.Goal
@model GoalContributeViewModel

@{
    ViewData["Title"] = "Contribute to Goal";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-4 text-primary font-weight-bold">Contribute to Your Goal</h1>
            <p class="lead text-muted">Enter the amount you wish to contribute to your goal.</p>
        </div>
    </div>

    <form asp-action="Contribute" method="post">
        <div class="form-group">
            <label for="ContributionAmount">Contribution Amount</label>
            <input type="number" step="0.01" class="form-control" id="ContributionAmount" name="ContributionAmount" value="@Model.ContributionAmount" required>
        </div>

        <input type="hidden" name="GoalId" value="@Model.GoalId" />

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-arrow-up"></i> Contribute
            </button>
        </div>
        <div class="form-group">
            <a href="@Url.Action("Index", "Goal")" class="btn btn-secondary btn-lg shadow-sm rounded-pill mt-3">
                <i class="fas fa-arrow-left"></i> Back to Goals
            </a>
        </div>
    </form>
</div>
