@using Savico.Core.Models.ViewModels.Income
@model IncomeViewModel

@{
    ViewData["Title"] = "Delete Income";
}

<h1>Delete Income</h1>

<div>
    <h4>Are you sure you want to delete this income?</h4>
    <div>
        <strong>Date:</strong> @Model.Date.ToString("dd.MM.yyyy")
        <strong>Amount:</strong> @Model.Amount @Model.Currency<br />
        <strong>Source:</strong> @Model.Source<br />
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
