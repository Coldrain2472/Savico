@using Savico.Core.Models.ViewModels.Income
@model IncomeViewModel

 @{
    ViewData["Title"] = "Delete Income";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="lead text-danger">Are you sure you want to delete this income?</p>
            <div class="mb-3">
                <strong>Date:</strong> @Model.Date.ToString("dd.MM.yyyy")<br />
                <strong>Amount:</strong> @Model.Amount @Model.Currency<br />
                <strong>Source:</strong> @Model.Source<br />
            </div>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

