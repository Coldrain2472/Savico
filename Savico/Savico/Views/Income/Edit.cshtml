@using Savico.Core.Models.ViewModels.Income
@model IncomeInputViewModel

@{
    ViewData["Title"] = "Edit Income";
}

<h1>
    <i class="fas fa-edit"></i> Edit Income
</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Amount">
            <i class="fas fa-dollar-sign"></i> Amount
        </label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fas fa-coins"></i> @Model.Currency
                </span>
            </div>
            <input asp-for="Amount" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Source">
            <i class="fas fa-briefcase"></i> Source
        </label>
        <input asp-for="Source" class="form-control" />
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date">
            <i class="fas fa-calendar-alt"></i> Date
        </label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-check-circle"></i> Save Changes
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
</form>
