@using Savico.Core.Models.ViewModels.Income
@model IEnumerable<IncomeViewModel>

@{
    ViewData["Title"] = "All Incomes";
}

<h2>Incomes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Source</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var income in Model)
        {
            <tr>
                <td>@income.Date.ToString("dd.MM.yyyy")</td>
                <td>@income.Amount @income.Currency</td>
                <td>@income.Source</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@income.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@income.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">
    <i class="fas fa-plus-circle"></i> Add New Income
</a>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
