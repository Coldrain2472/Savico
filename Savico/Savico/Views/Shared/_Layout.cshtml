<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Savico</title>
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

</head>
@RenderSection("Scripts", required: false)
<body id="page-top">

    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
           @*  <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Income" asp-action="Index">
                    <i class="fas fa-fw fa-dollar-sign"></i>
                    <span>Income</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Expense" asp-action="Index">
                    <i class="fas fa-fw fa-credit-card"></i>
                    <span>Expense</span>
                </a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Income" asp-action="Index">
                    <!-- Ensure 'All' matches the action in your controller -->
                    <i class="fas fa-dollar-sign"></i> <!-- Font Awesome icon -->
                    <span>Income</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Expense" asp-action="Index">
                    <!-- Ensure 'All' matches the action in your controller -->
                    <i class="fas fa-money-bill-wave"></i> <!-- Font Awesome icon -->
                    <span>Expense</span>
                </a>
            </li>
            <!-- Goal Sidebar Item -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Goal" asp-action="Index">
                    <i class="fas fa-bullseye"></i>
                    <span>Goals</span>
                </a>
            </li>
            <!-- Report Sidebar Item -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Report" asp-action="GenerateReport">
                    <i class="fas fa-file-alt"></i>
                    <span>Reports</span>
                </a>
            </li>
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>
                <div class="navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- End Page Content -->
        </div>
    </div>

    <footer class="footer bg-white text-center py-3">
        <div class="container">
            &copy; 2024 - Savico
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
