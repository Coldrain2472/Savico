@using Savico.Core.Models.ViewModels.Report
@model ReportDetailsViewModel

@{
    ViewData["Title"] = "Delete Report";
}

<div class="container mt-5">
    <h1>Delete Report</h1>

    <p>Are you sure you want to delete this report?</p>

    <div>
        <strong>Start Date:</strong> @Model.StartDate.ToString("dd.MM.yyyy")
    </div>
    <div>
        <strong>End Date:</strong> @Model.EndDate.ToString("dd.MM.yyyy")
    </div>
    <div>
        <strong>Total Income:</strong> @Model.TotalIncome @Model.Currency
    </div>
    <div>
        <strong>Total Expense:</strong> @Model.TotalExpense @Model.Currency
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger mt-3">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a href="@Url.Action("Index", "Report")" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>