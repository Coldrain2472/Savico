@using Savico.Core.Models.ViewModels.Report
@model ReportDetailsViewModel

@{
    ViewData["Title"] = "Delete Report";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-trash-alt"></i> Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="lead text-danger"><i class="fas fa-exclamation-circle"></i> Are you sure you want to delete this report?</p>
            <div class="mb-3">
                <strong>Start Date:</strong> @Model.StartDate.ToString("dd.MM.yyyy")<br />
                <strong>End Date:</strong> @Model.EndDate.ToString("dd.MM.yyyy")<br />
                <strong>Total Income:</strong> @Model.TotalIncome @Model.Currency<br />
                <strong>Total Expense:</strong> @Model.TotalExpense @Model.Currency<br />
            </div>
            <form asp-action="DeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
