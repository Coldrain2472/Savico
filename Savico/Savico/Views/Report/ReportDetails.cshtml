@using Savico.Core.Models.ViewModels.Report
@model ReportViewModel

<h2>Report from @Model.StartDate.ToShortDateString() to @Model.EndDate.ToShortDateString()</h2>
<p><strong>Total Income:</strong> @Model.TotalIncome</p>
<p><strong>Total Expense:</strong> @Model.TotalExpense</p>

<h3>Incomes</h3>
<ul>
    @foreach (var income in Model.Incomes)
    {
        <li>@income.Date.ToShortDateString(): @income.Amount - @income.Source</li>
    }
</ul>

<h3>Expenses</h3>
<ul>
    @foreach (var expense in Model.Expenses)
    {
        <li>@expense.Date.ToShortDateString(): @expense.Amount - @expense.Description</li>
    }
</ul>
