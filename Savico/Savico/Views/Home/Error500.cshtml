@{
    ViewData["Title"] = "Internal Server Error";
}
<div class="container text-center mt-5">
    <div class="error-page">
        <h1 class="display-1 text-danger">500</h1>
        <h2 class="mt-3">Something went wrong on our end.</h2>
        <p class="lead">We encountered an internal error. Please try again later or contact support.</p>
        <a href="/" class="btn btn-warning rounded-pill mt-4">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
    <p class="mt-4">
        Request ID: @Model.RequestId
        @if (Model.ShowRequestId)
        {
            <span>(use this ID when contacting support)</span>
        }
    </p>
</div>
<style>
    .error-page h1 {
        font-size: 10rem;
        font-weight: bold;
    }
    .error-page p {
        color: #6c757d;
    }
</style>