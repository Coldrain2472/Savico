@{
    ViewData["Title"] = "Page Not Found";
}
<div class="container text-center mt-5">
    <div class="error-page">
        <h1 class="display-1 text-danger">404</h1>
        <h2 class="mt-3">Oops! The page you're looking for can't be found.</h2>
        <p class="lead">It seems that the page you're trying to reach doesn't exist or has been moved.</p>
        <a href="/" class="btn btn-primary rounded-pill mt-4">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>
<style>
    .error-page h1 {
        font-size: 10rem;
        font-weight: bold;
    }
    .error-page p {
        color: #6c757d;
    }
</style>