@model Savico.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container text-center mt-5">
    <div class="error-page">
        <h1 class="display-3 text-warning">
            <i class="fas fa-exclamation-triangle"></i>
        </h1>
        <h2 class="mt-3">An error occurred while processing your request.</h2>
        <p class="lead">We're sorry for the inconvenience. Please try again later or contact support if the issue persists.</p>
        <a href="/" class="btn btn-primary rounded-pill mt-4">
            <i class="fas fa-home"></i> Return to Home
        </a>
    </div>
    <p class="mt-4 text-muted">
        Request ID: @Model.RequestId
        @if (Model.ShowRequestId)
        {
            <span>(use this ID when contacting support)</span>
        }
    </p>
</div>
<style>
    .error-page h1 {
        font-size: 6rem;
    }
    .error-page h2 {
        color: #333;
    }
    .error-page p {
        color: #6c757d;
    }
</style>
