@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Welcome, @Model.FirstName @Model.LastName!</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h3>Total Income</h3>
                    <p class="display-4">@Model.TotalIncome.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-danger text-white">
                <div class="card-body">
                    <h3>Total Expenses</h3>
                    <p class="display-4">@Model.TotalExpense.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h3>Available Budget</h3>
                    <p class="display-4">@Model.Budget.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>
</div>
